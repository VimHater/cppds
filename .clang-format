BasedOnStyle: Google   # Start with Google style as a base, and modify it for K&R style
BraceWrapping:
  AfterControlStatement: false  # Opening braces on the same line as the control statement
  AfterFunction: false
  AfterEnum: false
  AfterStruct: false
  AfterClass: false
IndentWidth: 4            # Indentation width
TabWidth: 4               # Set tab width to match indentation
UseTab: Never             # Use spaces instead of tabs
